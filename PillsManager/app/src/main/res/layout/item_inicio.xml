<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tarjeta_view"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">


            <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_pills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="220dp"
                android:layout_marginBottom="20dp"
                android:text="Prubea"
                android:textColor="@android:color/white"
                android:textSize="@dimen/TextSize"
                android:textStyle="italic"
                card_view:layout_constraintBottom_toTopOf="@+id/dosis"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="8dp"
                    android:text="Tomar"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/TextSize2"
                    android:textStyle="italic"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toStartOf="@+id/num_dosis"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/name_pills"
                    card_view:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/num_dosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="237dp"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/TextSize2"
                android:textStyle="italic"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/dosis"
                card_view:layout_constraintTop_toBottomOf="@+id/name_pills"
                card_view:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomar"
                android:textColor="@android:color/white"
                android:textSize="@dimen/TextSize2"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="260dp"
                tools:layout_editor_absoluteY="95dp" />

            <TextView
                android:id="@+id/hora_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/TextSize2"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="95dp" />


        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>